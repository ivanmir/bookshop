    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "cds deploy",
            "args": [ "-e", "require('@sap/cds/bin').deploy()" ],
            "env": { "DEBUG": "all" }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cds run",
            "args": [ "-e", "require('@sap/cds/bin').run()" ],
            "env": { "DEBUG": "all" }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cds srv -2 sql",
            "args": [ "-e", "require('@sap/cds/bin') .compile ('srv', {to:'sql'})" ],
            "env": { "DEBUG": "all" }
        }
    ]
}